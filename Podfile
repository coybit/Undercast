# Uncomment this line to define a global platform for your project
# platform :ios, '9.0'

def sharedPods
    pod 'SwiftMoment', '~> 0.5'
    pod 'ZFRippleButton'
    pod 'DZNEmptyDataSet'
    pod 'MBProgressHUD', '~> 1.0.0'
    pod 'SDWebImage'
    pod 'MediaRSSParser'
    pod 'ChameleonFramework'
    pod 'MarkedView'
end

target 'Undercast' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Undercast
  sharedPods
  
end


target 'UndercastTests' do
    # Comment this line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    
    # Pods for Undercast
    sharedPods
    
end
